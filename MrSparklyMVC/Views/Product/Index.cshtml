@model IEnumerable<MrSparklyMVC.Models.Product>

@{
    ViewBag.Title = "Products Index";
}

<h2>Products</h2>
@{ if (TempData["Msg"] != "") 
   {
       <p>@TempData["Msg"]</p>
   }
}

<p>
    @Html.ActionLink("Add New Product", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productBrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productCostPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productRetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productQty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productBrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productCostPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productRetailPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productQty)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.productID }) |
            @Html.ActionLink("Details", "Details", new { id=item.productID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.productID })
        </td>
    </tr>
}

</table>
