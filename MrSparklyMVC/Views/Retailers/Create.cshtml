@model MrSparklyMVC.Models.Retailer

@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        $('#helpModal').modal();
    });
</script>

<h2>Create</h2>

<div class="help">
    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#helpModal" data-remote="~/Help/HtmlPage1.html">Need Help?</button>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Retailer</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.employeeID, "Employee")
        </div>
        <div class="editor-field">
            @Html.DropDownList("employeeID", String.Empty)
            @Html.ValidationMessageFor(model => model.employeeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerName)
            @Html.ValidationMessageFor(model => model.retailerName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerContactName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerContactName)
            @Html.ValidationMessageFor(model => model.retailerContactName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerStreet)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerStreet)
            @Html.ValidationMessageFor(model => model.retailerStreet)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerPhone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerPhone)
            @Html.ValidationMessageFor(model => model.retailerPhone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerMob)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerMob)
            @Html.ValidationMessageFor(model => model.retailerMob)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerFax)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerFax)
            @Html.ValidationMessageFor(model => model.retailerFax)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.retailerEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.retailerEmail)
            @Html.ValidationMessageFor(model => model.retailerEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.suburbID, "Suburb")
        </div>
        <div class="editor-field">
            @Html.DropDownList("suburbID", String.Empty)
            @Html.ValidationMessageFor(model => model.suburbID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div class="help">
    <!-- Modal -->
    <div id="helpModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Help - Adding a Retailer</h4>
                </div>
                <div class="modal-body">
                    <h3>Adding a New Retailer</h3>
                    <p>To add a new retailer, select an employee from the drop down list to assign this retailer to, then enter the retailers details into the corresponding sections of the form, and click the "Create" button at the end of the form.</p>
                    <p>To cancel adding a new retailer and return to the retailers index page, click the "Back To List" link at the bottom of the page.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
