@model IEnumerable<MrSparklyMVC.Models.Retailer>

@{
    ViewBag.Title = "Retailer Index";
}

<h2>Retailers</h2>

<p>
    @Html.ActionLink("Add New Retailer", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.retailerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.retailerContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.retailerPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.retailerEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Suburb.suburb1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.retailerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.retailerContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.retailerPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.retailerEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Suburb.suburb1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.retailerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.retailerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.retailerID })
        </td>
    </tr>
}

</table>
