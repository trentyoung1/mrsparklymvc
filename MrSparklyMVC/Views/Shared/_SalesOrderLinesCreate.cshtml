}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    var $product = $('#productDDL');
    var $quantity = $('#quantity');
    var $price = $('#price');

    var updatePrice = function () {
        $url = '../../Product/GetProductPrice/' + $product.val();
        $.getJSON($url,
                   function (price) {
                       //
                       $('#price').val(price);
                   })
        .fail(function () {
            alert("fail");
        });
    }

    var lastval = '';
    var updateSubtotal = function () {
       // if ($('#quantity').val() != lastval) {
            lastval = $('#quantity').val();
            //alert(lastval);
            var price = parseInt($('#price').val());
            var qty = parseInt($('#quantity').val());            
            //alert(price + qty);
            $('#subTotal').val((price * qty).toString());
        //}
    }

    updatePrice();

    $product.on('change', updatePrice);
    $quantity.on('change', updateSubtotal);
    $product.on('change', updateSubtotal);
</script>

