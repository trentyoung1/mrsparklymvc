@model MrSparklyMVC.Models.Supplier

@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        $('#helpModal').modal();
    });
</script>

<h2>Create</h2>

<div class="help">
    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#helpModal" data-remote="~/Help/HtmlPage1.html">Need Help?</button>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Supplier</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.supplierName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.supplierName)
            @Html.ValidationMessageFor(model => model.supplierName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.contactName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.contactName)
            @Html.ValidationMessageFor(model => model.contactName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.supplierStreet)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.supplierStreet)
            @Html.ValidationMessageFor(model => model.supplierStreet)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.supplierPhone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.supplierPhone)
            @Html.ValidationMessageFor(model => model.supplierPhone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.supplierMobile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.supplierMobile)
            @Html.ValidationMessageFor(model => model.supplierMobile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.supplierFax)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.supplierFax)
            @Html.ValidationMessageFor(model => model.supplierFax)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.supplierEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.supplierEmail)
            @Html.ValidationMessageFor(model => model.supplierEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.suburbID, "Suburb")
        </div>
        <div class="editor-field">
            @Html.DropDownList("suburbID", String.Empty)
            @Html.ValidationMessageFor(model => model.suburbID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<div class="help">
    <!-- Modal -->
    <div id="helpModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Help - Adding a Supplier</h4>
                </div>
                <div class="modal-body">
                    <h3>Adding a New Supplier</h3>
                    <p>To add a new supplier, enter the suppliers name in the form provided, along with the rest of the suppliers details into the corresponding sections of the form, and click the "Create" button at the end of the form.</p>
                    <p>To cancel adding a new supplier and return to the suppliers index page, click the "Back To List" link at the bottom of the page.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
