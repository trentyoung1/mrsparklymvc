@model IEnumerable<MrSparklyMVC.Models.Supplier>

@{
    ViewBag.Title = "Supplier Index";
}
<script src="~/Scripts/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        $('#helpModal').modal();
    });
</script>

<h2>Suppliers</h2>

<div class="help">
    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#helpModal" data-remote="~/Help/HtmlPage1.html">Need Help?</button>
</div>

<p>
    @Html.ActionLink("Add New Supplier", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.supplierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplierPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplierEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Suburb.suburb1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.supplierName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplierPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplierEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Suburb.suburb1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.supplierID }) |
            @Html.ActionLink("Details", "Details", new { id=item.supplierID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.supplierID })
        </td>
    </tr>
}

</table>

<div class="help">
    <!-- Modal -->
    <div id="helpModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Help - Suppliers</h4>
                </div>
                <div class="modal-body">
                    <h3>Info</h3>
                    <p>The suppliers page shows a list of suppliers currently stored in the system, along with some basic information.</p>
                    <h3>Adding and Editing Suppliers</h3>
                    <p>To add a new supplier to the system, click the "Add New Supplier" link above the table, or to edit an exisiting supplier, click the "Edit" link beside the supplier you wish to edit.</p>
                    <h3>Viewing Supplier Details</h3>
                    <p>To see further details about a supplier, click the "Details" link beside the corresponding supplier.</p>
                    <h3>Deleting a Supplier</h3>
                    <p>To delete a supplier from the system, click the "Delete" link associated with the supplier you wish to remove.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
